<%= javascript_include_tag "users/users_manifest" %>
<%= stylesheet_link_tag "users/manifest.css" %>

<%- model_class = @user.class -%>
<section class='section'>
  <div class='container user-form'>
    <div class="row">
      <div class="span12 edit-user">
        <div id="wrapper" class="row-fluid">
          <div id="navigation" style="display:none;">
            <ul>
              <li class="selected first_step">
                <a href="#" class='step_1_nav' data-stepIndex="1">
                  <span class='step_count light'>01</span>
                  <span class='step_text'>General Info</span>
                </a>
              </li>
              <li>
                <a href="#" class='step_2_nav' data-stepIndex="2">
                  <span class='step_count light'>02</span>
                  <span class='step_text'>Positions</span>
                </a>
              </li>
              <li>
                <a href="#" class='step_3_nav' data-stepIndex="3">
                  <span class='step_count light'>03</span>
                  <span class='step_text'>Media</span>
                </a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div id='steps'>
            <fieldset class="step info">
              <%= render :partial => 'step_1_form' %>
            </fieldset> 

            <fieldset class="step info">
              <div id='step_2'>
                Please Complete Step 1 to come here..!
              </div>
            </fieldset> 


            <fieldset class="step info">
              <div id='step_3'>
                Please Complete previous steps to come here.
              </div>
            </fieldset>
          </div>
      </div>
    </div>

	</div>
</section>

<%= render :partial => 'application/crop_image_modal' %>

<script type="text/javascript">
$(document).ready(function(){
  app.sub_talents = <%= raw User.sub_types.to_json() %>
  app.super_sub_talents = <%= raw User.super_sub_types.to_json() %>
  // super roles select change event listener and showsub roles
  app.fn.init_super_roles_select_handler('super_role_select', app.sub_talents, 'sub_role_select', app.super_sub_talents);

  // prevent forward sliding for the form.
  app.allow_forward_sliding_till = 1

  app.user_guilds = <%= raw User.guilds.keys.to_json() %>
});

</script>
