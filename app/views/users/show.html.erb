<!-- Main Content -->

 <section id="promo" class="section alt">
   <div class="container-fluid">
     <div class="row-fluid">
       <div class="span10 offset1">
         <div class="row-fluid">
           <div class="span5">
             <div class="row-fluid">
               <div class="span12 centered-text">
                 <h3><span><%= @user.name.split[0..0].join(" ") %></span></h3>
                 <% if @user.location.present? %><p><span><%= @user.location %></span></p> <%end %>
                 <a href="#">
                 <div class="profile-pic">
                   <% if @user.photos.present? then %>
                     <%= image_tag @user.photos.first.image %>
                   <% else %>
                     <%= image_tag "biz/people1-400x400.jpeg" %>
                   <% end %>  
                 </div>
               </a>
               </div>
               <div class="clearfix"></div>
               <div class="row-fluid pictures-contact-buttons">
                 <div class="span4 offset1 pictures-button">
                   <a href = "#" class="btn">Pictures</a>
                 </div>
                 <div class="span4 offset2 contact-button">
                   <%= link_to 'Contact', new_conversation_path(:recipient => @user.email), class: "btn" %>
                 </div>
               </div>
             </div>
           </div>
           <div class="span7">
             <div class="row-fluid about-me">
               <div class="page-header">
                 <h1>
                     About Me
                 </h1>
               </div>
               <p>
                 <%= simple_format(@user.about) %>
               </p>
             </div>
             <div class="row-fluid roles">
               <div class="span5">
                 role1
               </div>
               <div class="span5 offset2">
                 role2
               </div>
             </div>
           </div>
             <div class="span5">
               
		             <div class="well">
		               <h4>
		                   Based in <%= @user.location %>
		               </h4>
		               <p>
									<center><img src="http://maps.googleapis.com/maps/api/staticmap?center=<%= @user.location %>&zoom=11&size=400x300&sensor=false"></center>
		               </p>
		             </div>
	<!-- <h4> Profile Completeness </h4>
							<div class="progress progress-striped active">
							  <div class="bar" style="width: 40%;"></div>
							</div>
							<h4> Klout </h4>
							<div class="progress progress-striped active">
							  <div class="bar" style="width: 80%;"></div>
							</div>
							<center>
							      <%= mail_to @user.email, "Contact", :class => "btn btn-primary btn-large",
										         :subject => "Contact from Caball Networks" %> 
							</center>
							<br>
							<center>
							<%= link_to t('.edit', :default => t("helpers.links.edit")),
						              edit_user_path(@user), :class => 'btn' %>
							</center>
							<br> -->
								<div class="span11">
			             <div class="well">
								<center>
								<p>Start a conversation with <%= @user.name.split[0..0].join(" ") %></p>
		            <%= link_to 'Send Message', new_conversation_path(:recipient => @user.email), class: "btn" %>
							</center>
						</div>
						</div>
						</div>
           <div class="span7">
             <div class="well">
               <h3>
                   <%= @user.name %> <% if @user.talents.present? %>- <%= @user.talents.first.name %> <% end %>
               </h3>
               <p>
							<%=h truncate(@user.about, :length => 200) %>
               </p>
             </div>
           </div>
					<% if @user.talents.present? then %>
					<%= render :partial => 'talents' %>
					<% end %>
					<% if @user.projects.present? then %>
						<%= render :partial => 'current_projects' %>
					<% end %>
					<% if @user.characteristics.age.present? then %>
						<%= render :partial => 'characteristics' %>
					<% end %>
         </div>
       </div>
     </div>
   </div>
 </section>

 <section class="section">
   <div class="container">
     <div class="row-fluid">
       <div class="span10 offset1">
         <div class="row-fluid">
           <div class="page-header">
             <h1>
               Video Portfolio <small>A sample of <%= @user.name.split[0..0].join(" ").pluralize %> work</small>
             </h1>
           </div>
           <ul class="thumbnails thumbnail-list">
             <li class="span4">
							<a data-toggle="lightbox" href="#video1">
                 <figure class="thumbnail-figure">
									<% if @user.videos.first.thumbnail_small.present? %>
                   <%= image_tag(@user.videos.first.thumbnail_large, :width => '100%') %>
										<% else %>
										<%= image_tag "http://img.youtube.com/vi/EqWRZrupLrI/0.jpg", :width => "100%" %>
										<% end %>									<i class="icon-play-circle"></i>    
                 </figure>
							</a>
							<% if @user.videos.first.present? %>
								<div class="lightbox fade" id="video1" style="display: none;">
									<div class='lightbox-content'>
										<h3><%= @user.videos.first.title %></h3>
										<iframe width="560" height="315" src=<%= @user.videos.first.embed_url %> frameborder="0" allowfullscreen></iframe>
									</div>
								</div>
							<% end %>
             </li>
             <li class="span4">
               <a href="portfolio-item.html">
                 <a data-toggle="lightbox" href="#video2">
									<figure class="thumbnail-figure">
									<% if @user.videos.second.thumbnail_small.present? %>
                   <%= image_tag(@user.videos.second.thumbnail_large, :width => '100%') %>
										<% else %>
										<%= image_tag "http://img.youtube.com/vi/EqWRZrupLrI/0.jpg", :width => "100%" %>
										<% end %>									<i class="icon-play-circle"></i>
								 </figure>
               </a>
							<% if @user.videos.second.present? %>
								<div class="lightbox fade" id="video2" style="display: none;">
									<div class='lightbox-content'>
										<h3><%= @user.videos.second.title %></h3>
										<iframe width="560" height="315" src=<%= @user.videos.second.embed_url %> frameborder="0" allowfullscreen></iframe>
									</div>
								</div>
							<% end %>
             </li>
             <li class="span4">
               <a href="portfolio-item.html">
                 <a data-toggle="lightbox" href="#video3">
									<figure class="thumbnail-figure">
									<% if @user.videos.third.thumbnail_small.present? %>
                   <%= image_tag(@user.videos.third.thumbnail_large, :width => '100%') %>
										<% else %>
										<%= image_tag "http://img.youtube.com/vi/EqWRZrupLrI/0.jpg", :width => "100%" %>
										<% end %>									<i class="icon-play-circle"></i>
								 </figure>
               </a>
							<% if @user.videos.third.present? %>
								<div class="lightbox fade" id="video3" style="display: none;">
									<div class='lightbox-content'>
										<h3><%= @user.videos.third.title %></h3>
										<iframe width="560" height="315" src=<%= @user.videos.third.embed_url %> frameborder="0" allowfullscreen></iframe>
									</div>
								</div>
							<% end %>
             </li>
           </ul>
         </div>  
       </div>
     </div>  
   </div>
 </section>

   <section class="section alt">
     <div class="container">
       <div class="row-fluid">
         <div class="span10 offset1">
           <div class="row-fluid">
             <div class="page-header">
                 <h1>
                     About Me
                 </h1>
             </div>
						<p>
							<%= @user.about %>
						</p>
           </div>
         </div>
       </div>
     </div>
   </section>

 </div>