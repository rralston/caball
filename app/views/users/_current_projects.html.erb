<div class="span12">
  <div class="well">
    <h3>
        Current Projects
    </h3>
     <table class="table table-striped table-hover">								
				  <tbody>
						<% @projects.each do |project| %>
						<tr>
						<td><b><%= link_to project.title, project_path(project.id), :rel => "tooltip", :title => "View Project Details"  %></b> 
						  <%= shorten :text => project.description, :length => 400, :partial => "more_project_description" %>
						  <!-- About Me Modal -->
                <div id="about-me-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                    <h3><span><%= project.title %></span></h3>
                  </div>
                  <div class="modal-body">
                    <p>
                   <%= simple_format(project.description) %>
                    </p>
                  </div>
                </div>
               <!-- End About Me Modal -->
             </td>
             </tr>
             <tr>
               <td>
							   <%= project.roles.length %> Roles Available on Caball
							   <%= link_to "Apply Now", project_path(project.id), :class => 'btn btn-mini btn-primary' %>
						  </td>
						</tr>
						<% end %>
				  </tbody>
			</table>
  </div>
</div>