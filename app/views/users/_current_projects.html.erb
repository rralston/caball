<div class="span6">
                <div class="well">
                  <h3>
                      Current Projects
                  </h3>
                   <table class="table table-striped table-hover">								
											  <tbody>
													<% @projects.each do |project| %>
													<tr>
													<td><b><%= link_to project.title, project_path(project.id), :rel => "tooltip", :title => "View Project Details"  %></b> <%= project.description %>
														<br><br>
														<b><%= project.roles.length %> Roles Available on Caball
														 <%= link_to "Apply Now", project_path(project.id), :class => 'btn btn-mini btn-primary' %></b>
													</td>
													</tr>
													<% end %>
											  </tbody>
										</table>
                </div>
              </div>