<!-- Media Modal -->
<div id="edit_headline_modal" class="modal hide fade left-aligned" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3><span>Update headline</span></h3>
  </div>
  <div class="modal-body">
    <%= form_for @user do |f| %>

      <div class="control-group">
        <%= f.label :headline, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_area :headline, :class => 'text_field', :style => 'width: 400px; height: 100px;' %>
        </div>
      </div>

      <%= f.submit 'Update', :class => 'btn btn-primary', :id => 'submit-user-form' %>
    <% end %>
  </div>
  <div class='modal-footer'>
    <button class='btn' data-dismiss="modal">Close</button>
  </div>
</div>
