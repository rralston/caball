<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script> 

<div class="well">
	<% @user.errors.full_messages.each do |error| %>
	  <div class="alert alert-error">
				<button type="button" class="close" data-dismiss="alert">Ã—</button>
				<p><%= error %></p>
		</div>
	<% end %>
	
	<div class="row-fluid">
	  <div class="span12">
	    <h2>User Profile</h2>
	  <%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
	        <div class="row-fluid">
	          <div class="span4">
		
	
	
	  <%= f.fields_for :photos do |p|  %>
		  <% if @user.photos.exists? %>
			
			<div class="control-group">
			  <%= p.label "Profile Photo", :class => 'control-label' %>
		  	<div class="controls">
					<%= image_tag @user.photos.first.image.url(:medium), {:class => "img-polaroid"} %>					
					<%= p.check_box :_destroy %> Click Here to Destroy
					</div>
			</div>
			
				<% else %>
				
				<div class="control-group">
		    	<%= p.label :description, :class => 'control-label' %>
					<div class="controls">
						<%= p.text_field :description, :class => 'text_field' %>
		 			</div>
		 			<div class="controls">
            <%= p.text_field :user_description, :class => 'text_field' %>
          </div>
				</div>
				<div class="control-group">
					<p>Please Upload a Profile Image</p>
					<div class="controls">
						<%= p.file_field :image %>
			 		</div>
				</div>
				
	  	<% end %>
		<% end %>
		<div class="control-group">
	  <%= f.label :name, :class => 'control-label' %>
	    <div class="controls">
	    <%= f.text_field :name, :class => 'text_field' %>
	    </div>
	  </div>
	 <div class="control-group">
	    <%= f.label :email, :class => 'control-label' %>
	    <div class="controls">
	      <%= f.text_field :email, :class => 'text_field' %>
	    </div>
	  </div>
	 <div class="control-group">
	    <%= f.label :location, :class => 'control-label' %>
	    <div class="controls">
	      <%= f.text_field :location, :class => 'text_field' %>
			<br><br>
				<%= image_tag("locate_me.png", :align => "left", :height => "30", :id => "locate") %>
				 <i>Click icon for your location</i>
	    </div>
	  </div>
</div>
  <div class="span6 offset2">
	 <div class="control-group">
	    <%= f.label :about, :class => 'control-label' %>
	    <div class="controls">
	      <%= f.text_area :about, :class => 'text_area' %>
	    </div>
	 </div>
	</div>
	</div>

		<h2>What Positions Can you Do?</h2>
		<h5>Start with your main position, you can always add more and more and more and more and more!</h5>
		<br>
		<%= f.fields_for :talents do |talent|   %>
		 <div class="control-group">
			  <%= talent.label "Talent", :class => 'control-label' %>
				<div class="controls">
					<%= talent.select(:name, [['Actor'], ['Producer'], ['Director'], ['Technical'], ['Stuntmen'], ['Fan'], ['Talent Manager']]) %>
			   </div>
		 </div>
		
		<div class="control-group">
	  <%= talent.label :description, :class => 'control-label' %>
	    <div class="controls">
	    <%= talent.text_area :description, :class => 'textarea', :rows => "10" %>	
			<%= talent.check_box :_destroy %> Click Here to Destroy
	    </div>
	  </div>
		<% end %>
		
		<div id="fields-for-list" class="numerous">
			<%= f.fields_for :talents, Talent.new, :child_index => 'replace_this' do |talent| %>
		  <div class="control-group">
				  <%= talent.label :name, :class => 'control-label' %>
					<div class="controls">
						<%= talent.select(:name, [['Actor'], ['Producer'], ['Director'], ['Technical'], ['Stuntmen']]) %>
				   </div>
			 </div>
			
			<div class="control-group">
		  <%= talent.label :description, :class => 'control-label' %>
		    <div class="controls">
		    <%= talent.text_area :description, :class => 'textarea', :rows => "5" %>	
		    </div>
		  </div>
		
		    <%= link_to 'Remove', '#', :class => 'numerous-remove' %>
		<% end %>
		</div>
		
		
		<div id="list"></div>
		<%= link_to 'Add Another Talent To Find More Projects!', '#', :id => 'add-to-list' %>

<br>
		    <h2>A little more detail can help you get found!</h2><br>
		    <%= f.fields_for :characteristics do |c|   %>
		        <div class="row-fluid">
		          <div class="span6">
		          	<div class="control-group">
									  <%= c.label :age, :class => 'control-label' %>
										<div class="controls">
											<%= c.text_field :age, :class => 'text_field' %>
									   </div>
								 </div>
									<div class="control-group">
										 <%= c.label :height, :class => 'control-label' %>
											<div class="controls">
												<%= c.text_field :height, :class => 'text_field' %>
										   </div>
									</div>
									<div class="control-group">
									  <%= c.label :ethnicity, :class => 'control-label' %>
										<div class="controls">
											<%= c.text_field :ethnicity, :class => 'text_field' %>
									   </div>
									</div>
									<div class="control-group">
										 <%= c.label :bodytype, :class => 'control-label' %>
											<div class="controls">
												<%= c.text_field :bodytype, :class => 'text_field' %>
										   </div>
									</div>	
									<div class="control-group">
									  <%= c.label :skin_color, :class => 'control-label' %>
										<div class="controls">
											<%= c.text_field :skin_color, :class => 'text_field' %>
									   </div>
									</div>
									<div class="control-group">
										 <%= c.label :eye_color, :class => 'control-label' %>
											<div class="controls">
												<%= c.text_field :eye_color, :class => 'text_field' %>
										   </div>
									</div>
		          </div>
		          <div class="span6">
		          	<div class="control-group">
								  <%= c.label :hair_color, :class => 'control-label' %>
									<div class="controls">
										<%= c.text_field :hair_color, :class => 'text_field' %>
								   </div>
								</div>
								<div class="control-group">
									 <%= c.label :chest, :class => 'control-label' %>
										<div class="controls">
											<%= c.text_field :chest, :class => 'text_field' %>
									   </div>
								</div>
								<div class="control-group">
								  <%= c.label :waist, :class => 'control-label' %>
									<div class="controls">
										<%= c.text_field :waist, :class => 'text_field' %>
								   </div>
								</div>
								<div class="control-group">
									 <%= c.label :hips, :class => 'control-label' %>
										<div class="controls">
											<%= c.text_field :hips, :class => 'text_field' %>
									   </div>
								</div>
								<div class="control-group">
								  <%= c.label :dress_size, :class => 'control-label' %>
									<div class="controls">
										<%= c.text_field :dress_size, :class => 'text_field' %>
								   </div>
								</div>
		          </div>


	<% end %>	
	<div class="row-fluid">
    <div class="span12">
	<h2>How about some Videos for a Virtual Resume!</h2><br>
	
	<%= f.fields_for :videos do |video| %>
		<% if @videos.present?  %>
		<% if video.object.thumbnail_small.present? %>
			<div class="control-group">
	    <label class="control-label">Video Preview</label>
				<div class="controls">
					<img src=<%= video.object.thumbnail_small %> class="img-polaroid" >
					<%= video.check_box :_destroy %> Click Here to Destroy
				</div>
			</div>
			<% end %>
			<div class="control-group">
	    <%= video.label :url, :class => 'control-label' %>
				<div class="controls">
					<%= video.text_field(:url) %>
				</div>
			</div>
			<% else %> 
				<div class="control-group">
					<label class="control-label">Youtube URL</label>
					<div class="controls">
					<%= video.text_field(:url) %>
					</div>
				</div>
			<% end %>
      <div class="control-group">
        <label class="control-label">Description</label>
        <div class="controls">
          <%= video.text_area :user_description, :class => 'text_field', :rows => 5 %>
        </div>
      </div>
	<% end %>
<!-- End of Form -->

	  <div class="form-actions">
	    <%= f.submit nil, :class => 'btn btn-primary' %>
	    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
	                users_path, :class => 'btn' %>
	  </div>
	<% end %>
</div>
</div>
</div>