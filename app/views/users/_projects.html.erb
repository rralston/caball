<div class="projects">
  <div class="row-fluid">
    <div class="span10 offset1 projects-title title">
      <h1>Projects</h1>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span10 offset1">
      <div class="well">
        <% if @projects.exists? %>
          <% @projects.each_with_index do |project, index| %>
            <div class="row-fluid">
              <div class="span12">
                <h3><%= link_to project.title, project_path(project.id), :rel => "tooltip", :title => "View Project Details"  %></h3>
                <%= shorten :text => project.description, :length => 400, :partial => "more_project_description.html.erb", :counter => index %>
                <!-- About Me Modal -->
                <div id="about-me-modal-<%= index %>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3><span><%= project.title %></span></h3>
                  </div>
                  <div class="modal-body">
                   <%= simple_format project.description %>
                  </div>
                </div>
               <!-- End About Me Modal --> 
                 <p><%= project.roles.length %> roles available</p>
                 <% project.roles.each do |role| %>
                   <div class="row-fluid">
                     <div class="span12">
                       <%= simple_format role.description %>
                     </div>
                   </div>
                 <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
        </div>
            <table class="table table-striped table-hover">                
              <tbody>
                <% @projects.each do |project| %>
                <tr>
                  <td><h3><%= link_to project.title, project_path(project.id), :rel => "tooltip", :title => "View Project Details"  %></h3> 
                  <%= shorten :text => project.description, :length => 400, :partial => "more_project_description.html.erb" %>
                  <!-- About Me Modal -->
                    <div id="about-me-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h3><span><%= project.title %></span></h3>
                      </div>
                      <div class="modal-body">
                        <p>
                       <%= simple_format(project.description) %>
                        </p>
                      </div>
                    </div>
                   <!-- End About Me Modal --> 
                  </td>
                 </tr>
                 <tr>
                   <td>
                     <%= project.roles.length %> Roles Available on Caball
                     <%= link_to "Apply Now", project_path(project.id), :class => 'btn btn-mini btn-primary' %>
                  </td>
                </tr>
                <% end %>
              </tbody>
          </table>
      </div>
    </div>
  </div>
</div>
