<div class="container-fluid">
  <div class="row-fluid">
    <div class="span6 left">
      <div class="message-follow row-fluid">
        <div class="span3">
          <h5>
          <a data-toggle="modal" data-target="#message-modal" 
                        data-remote ="<%= new_conversation_path(:recipient => User.find(@project.id).email, :modal => true)%>"
                        data-keyboard="true" class="message-button">Message</a>
          </h5>
          <!-- Message Modal -->
            <div id="message-modal" class="modal hide fade left-aligned" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3><span>Message <%= User.find(@project.id).name.split[0..0].join(" ") %></span></h3>
              </div>
              <div class="modal-body">
              </div>
            </div>
          <!-- Message Modal --> 
        </div>
      </div>
      <div class="row-fluid video-container">
        <% if @real_videos.first.present? %>
          <iframe src=<%= @real_videos.first.embed_url + "?wmode=transparent" %> frameborder="0" allowfullscreen></iframe>
        <% end %>
      </div>
      <div class="about-text">
        <%= shorten :text => @project.description, :length => 400, :partial => "more_project_about"%>
        <!-- About Project Modal -->
          <div id="project-about-modal" class="modal hide fade left-aligned" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
              <h3><span><%= @project.title%></span></h3>
            </div>
            <div class="modal-body">
              <%= simple_format @project.description %>
            </div>
          </div>
        <!-- About Project Modal --> 
      </div>
      
    </div>
    
    <div class="span6 right">
      <div class="open-roles-container">
        <span>Open Roles: </span>
      </div>
      <div class="roles-accordion accordion" id="role-accordion">
        <% @sorted_roles.each_with_index do |(name, roles), index| %>
        
          <div class="accordion-group">
            <div class="accordion-heading">
              <a class="accordion-toggle" data-toggle="collapse" data-parent="#role-accordion" href="#collapse<%= index %>">
                <%= name %>
              </a>
            </div>
            <div id="collapse<%= index%>" class="accordion-body collapse <% if index == 0 then %> in <% end %>">
              <div class="accordion-inner">
                <% roles.each do |role| %>
                  <div class="sub-role"><%= role.description %></div>
                <% end %>
              </div>
            </div>
          </div>
        
        <% end %>
      </div>
    </div>
  </div>
  <div class="row-fluid dates">
    <p>
    <% if !@project.start.nil? %>  
      <span class="label">Starts:  </span><span><%= @project.start %></span>
    <% end %>
    <% if !@project.end.nil? %>
      <span class="label">Ends:  </span><span><%= @project.end %></span>
    <% end %>
    </p>
  </div>
  <div class="row-fluid">
    <div class="span9">
      <p>
          <%= simple_format(@project.description) %>
    	</p>
    </div>
    <div class="span3 centered-text">
      <%= render 'contact' %>
    </div>
  </div>
</div>
