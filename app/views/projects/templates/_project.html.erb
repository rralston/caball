<script type="script/template" id='project_template'>
  <a href='/projects/<%%= url_param %>'>
    <div class="ptopimg">
      <%% if(photos.length > 0){ %>
        <div class='project-img' style='background: url("<%%= photos[0].image.regular.url %>") no-repeat'>
        </div>
      <%% } %>
      
      <div class="topcnt">
          <h3 class='medium'><%%= title %></h3>
          <p><%%= description %></p>
        </div>
      
    </div>
  </a>
  <div class="pinfo">
    
    <ul class="plist">
      <%% _.each(_.first(super_roles_needed, 4), function(role){ %>
        <li class='badge badge-custom-green'><%%= role %></li>
      <%% }) %>
      <%% if(super_roles_needed.length > 5) { %>
        <li class='badge badge-custom-green'>+<%%= super_roles_needed.length - 4 %> More</li> 
      <%% } %>
    </ul>
  </div>
  
  <div class="proindi"> 
    <div class="fans">
      <div class='fans-count regular text-center'>
        <%%= fans.length %>
      </div>
      <span>FANS</span>
    </div>
    <div class="follow">
      <div class="btn-follow btn-custom btn-cement medium flw">
        <%% if(typeof user_following != 'undefined' && user_following){ %>
          Un Like
        <%% }else{ %>
          Like
        <%% } %>
      </div>

      <div class="btn-message msg btn-custom btn-cement medium send-generic-message" data-message-subject="Regarding Project - <%%= title %>" data-message-header="Message Project Owner - <%%= user.name %>" data-message-recipients="<%%= user.email %>">
          Message
      </div>
    </div>
  </div>

  <div class="progcircle">
    <div class="role-circle-container">

      <div class="role-circle"> </div>
  
      <div class="circle-fill"> </div>
  
  
      <div class="circle-measure circle-measure-<%%= roles_percent %>"> </div>
  
      <span class="role-count medium">
  
        <%%= open_roles.length %> Open Roles
  
      </span>
  
    </div>

  </div>
</script>