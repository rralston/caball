<script type="script/template" id='project_role_template'>
  <div class='pull-left user_img'>
    <img src='<%%= approved_user.profile_pic %>' class='img-circle'>
  </div>
  <div class='pull-left user_details'>
    <div class='user_name'>
      <a href='/users/<%%= approved_user.url_param %>'><%%=approved_user. name %></a>
    </div>    
    <div class='user_loc'>
      <i class='icon-map-marker'></i> <%%= approved_user.location %>
    </div>

    <div class='user_talents'>
      <%%= approved_user.talent_names.join('/') %>
    </div>    
  </div>

  <div class='role_actions'>
    <a href='' class='delete_role'><i class='icon-minus-sign'></i> delete this person</a>
    
    <a href='' class='edit_role'><i class='icon-pencil'></i> edit role</a>
  </div>
</script>