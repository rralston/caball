<div class="container">
    <div class="row-fluid">
      <div class="span10 offset1">

        <div class="row-fluid">
          <div class="page-header">
              <h1>
                  Get Involved
              </h1>
          </div>
        </div>

        <div class="row-fluid">
          <% @project.roles.each_with_index do |role, index| %>
					<div class="well span3 pull-center roles">
              <h5>
                  <i class="icon-camera huge-icon"></i>    
                  <span class="blocked"><%= role.name %></span>
              </h5>
              <p>
                  <%=h truncate(role.description, :length => 20) %>
              </p>
              <%= link_to 'Apply', new_conversation_path(:recipient => User.find(@project.user_id).email, :subject => role.name+"-"+@project.title ), class: "btn btn-small btn-success" %>
              
								<%= link_to "Info", "#role", 'data-toggle' => 'lightbox', :class => "btn btn-small btn-info" %>
							
							<div class="lightbox fade" id="role" style="display: none;">
								<div class='lightbox-content'>
									<h3><%= role.name %></h3>
									<p><%= role.description %></p>
									<br><%= link_to 'Apply', new_conversation_path(:recipient => User.find(@project.user_id).email, :subject => role.name+"-"+@project.title ), class: "btn btn-small btn-success" %><br>
								</div>
								</div>
          </div>
					<% end %>
        </div>

      </div>
    </div>
  </div>

