<div class="container">
  <div class="row-fluid">
    <div class="span10 offset1">

      <div class="row-fluid">
        <div class="page-header">
          <h1>
            <%= @project.title %> <small><%=h truncate(@project.description, :length => 200) %></small>
          </h1>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span8">
          <div class="video-container">
            <iframe src="http://www.youtube.com/embed/xvtNS6hbVy4?rel=0" frameborder="0" allowfullscreen></iframe>
          </div>
        </div>
        <div class="span4">
          <div class="well">
	<center><%= image_tag(User.find(@project.user_id).photo.image.url(:medium), {:class => "img-circle"}) %></center>
                             <h3>
                               <%= User.find(@project.user_id).name %> 
														</h3>

                             <p>
                                 <%= User.find(@project.user_id).about %>
                             </p>
                           </div>
          <div class="well">
            <h3>
                Get Involved
            </h3>
            <p><center>
                <button class="btn btn-primary" type="button">Contact</button><br><br>
								<%= link_to t('.edit', :default => t("helpers.links.edit")),
			                      edit_project_path(@project), :class => 'btn btn-warning' %><br><br>
								
								<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
									                      project_path(@project),
									                      :method => :delete,
									                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
									                      :class => 'btn btn-danger' %>
            </p></center>
          </div>
        </div>
      </div>

    </div>      
  </div>
</div>