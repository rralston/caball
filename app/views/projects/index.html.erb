<div class="well">
<section class='section' id='content' role='main'>
  <div class='container'>
    <div class='page-header'>
	
			<!-- Begin New Project Search -->

			<div class="accordion" id="accordion2">
			  <div class="accordion-group">
			    <div class="accordion-heading">
			      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
			        <h1>Advanced Search Fields</h1>
			      </a>
			    </div>
			    <div id="collapseOne" class="accordion-body collapse out">
			      <div class="accordion-inner">
			        <%= search_form_for @search do |f| %>
							  <%= f.condition_fields do |c| %>
							  <div class="field">
							    <%= c.attribute_fields do |a| %>
							      <%= a.attribute_select associations: [:roles] %>
							    <% end %>
							    <%= c.predicate_select %>
							    <%= c.value_fields do |v| %>
							      <%= v.text_field :value %>
							    <% end %>
							    </div>
							  <% end %>
							  <div class="actions"><%= f.submit "Search" %></div>
							<% end %>
			      </div>
			    </div>
			  </div>
				<!-- End New Project Search -->
				
				<br>
				
      <h1>
        Featured Projects
        <small>Here are just some of the great projects on Caball right now.</small>
      </h1>
    </div>
    <ul class='thumbnails bordered thumbnail-list'>
      <% @projects.first(3).each_with_index do |proj, counter| %>
			<li class='span4'>
        <%= link_to project_path(proj.id) do %>
          <figure class='thumbnail-figure'>
            <% if proj.photos.exists? %>
						<%= image_tag(proj.photos.first.image) %>
						<% end %>
              <figcaption class='thumbnail-title'>
                <h3>
                  <span><%= proj.title %></span>
                </h3>
                <p>
                  <span>
										<%= proj.roles.length %> Roles Available!
                </p>
              </figcaption>
            </img>
          </figure>
        <% end %>
        <p>
          <%= shorten :text => proj.description, :length => 500, :partial => "more_projects_description", :counter => counter %>
        </p>
        <div class='row-fluid'>
          <div class='span4'>
            <h4>Design Skills</h4>
          </div>
          <div class='span8'>
            <div class='progress progress-striped'>
              <div class='bar' style='width: 75%;'></div>
            </div>
          </div>
        </div>
        <div class='row-fluid'>
          <div class='span4'>
            <h4>Coding Skills</h4>
          </div>
          <div class='span8'>
            <div class='progress progress-striped'>
              <div class='bar' style='width: 80%;'></div>
            </div>
          </div>
        </div>
        <div class='row-fluid'>
          <div class='span4'>
            <h4>Social Skills</h4>
          </div>
          <div class='span8'>
            <div class='progress progress-striped'>
              <div class='bar' style='width: 30%;'></div>
            </div>
          </div>
        </div>
      </li>
<% end %>
      
    </ul>
  </div>
</section>
<br>
<%- model_class = Project.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
	    <th><%= model_class.human_attribute_name(:id) %></th>
			<th><%= model_class.human_attribute_name(:user_id) %></th>
			<th>User Photo</th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= model_class.human_attribute_name(:end) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each_with_index do |project, counter| %>
      <tr>
        <td><%= link_to project.id, project_path(project), :class => 'btn btn-mini' %></td>
				<td><% if project.user_id %><%= link_to User.find(project.user_id).name, User.find(project.user_id) %><% end %></td>
				<td><% if User.find(project.user_id).photos.exists? %><%= image_tag(User.find(project.user_id).photos.first.image.url(:medium), {:class => "img-polaroid"}) %><% end %></td>
				<td><%= link_to project.title, project_path(project) %></td>
        <td>
          <%= shorten :text => project.description, :length => 100, :partial => "more_projects_description", :counter => counter %>
          <!-- Projects Description Modal -->

          <div id="projects-description-<%= counter %>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
              <h3><span><%= project.title %></span></h3>
            </div>
            <div class="modal-body">
              <p>
                <%= simple_format(project.description) %>
              </p>
            </div>
          </div>
          <!-- End Projects Description Modal -->
        </td>
        <td><%=l project.created_at %></td>
				<td><%= project.end %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_project_path(project), :class => 'btn btn-warning btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      project_path(project),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

