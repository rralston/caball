    <div class="featuredslider span12">
      <!--======Projects div===-->
      <div class="row">
        <div class="pdiv span10" id="pdiv">
          
          <% Project.sample_featured_projects.each do |project|  %>

          <div class="project">
            <a href="/projects/<%= project.id %>">
              <div class="ptopimg">
                  <img src="<%= image_path(project.display_photo) %>" alt="">
                <div class="topcnt">
                    <h3 class="medium">
                        <%= project.title %>
                    </h3>
                    <p>
                      <%= project.description %>
                    </p>
                  </div>
                
              </div>
            </a>
            <div class="pinfo">
              
              <ul class="plist">
                <% project.roles.first(4).each do |role| %> 
                  <li class="badge badge-custom-green">
                    <%= role.name %>
                  </li>
                <% end %>
                <% if project.roles.count > 4 %>
                  <li class="badge badge-custom-green">
                      +<%= project.roles.count - 4 %>MORE
                  </li>
                <% end %>
              </ul>
            </div>
            
            <div class="proindi"> 
              <div class="fans">
                <div class="fans-count regular text-center">
                  <%= project.likes.count %>
                </div>
                <span>FANS</span>
              </div>
              <div class="follow">
                <div class="btn-follow btn-custom btn-cement medium flw">
                  
                    Like
                  
                </div>

                <div class="btn-message msg btn-custom btn-cement medium send-generic-message" data-message-subject="<%= project.title %>" data-message-header="Message Project Owner - <%= project.user.name %>" data-message-recipients="<%= project.user.email %>">
                    Message
                </div>
              </div>
            </div>

            <div class="progcircle">
              <div class="role-circle-container">

                <div class="role-circle"> </div>
            
                <div class="circle-fill"> </div>
            
            
                <div class="circle-measure circle-measure-<%= project.roles_percent %>"> </div>
            
                <span class="role-count medium">
            
                  <%= project.open_roles.count %> Open Roles
            
                </span>
            
              </div>

            </div>
          </div>

          <% end %>
          
        </div>
      <!--======Projects div===-->
    </div>
    </div>
    </div>
  </div>
</div>
