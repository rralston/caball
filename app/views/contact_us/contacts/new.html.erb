<!-- Main Content -->
<div id="content" role="main">

    

    <section class="section">
        <div class="container">
            <div class="span6">
                <div class="row-fluid dtlinfotext light">
									  <fieldset>
											<%= form_for @contact, :url => contacts_path, :html => {:class => 'form-horizontal' ,:id => 'form-horizontal'} do |f| %>
											  <% if ContactUs.require_name %>
												<div class="control-group">
												      <%= f.label :name, (t('.name') + content_tag(:abbr, '*', :class => 'required')).html_safe %>
												<div class="controls">
											      <%= f.text_field :name %>
											      <% if f.object.errors[:name].present? %>
											        <p class='inline-error'><%= f.object.errors[:name].join(' and ') %></p>
											      <% end %>
											    </div></div>
											  <% end %>
												<div class="control-group">
											    <%= f.label :email, (t('.email') + content_tag(:abbr, '*', :class => 'required')).html_safe %>
													<div class="controls">
											    <%= f.text_field :email %>
											    <% if f.object.errors[:email].present? %>
											      <p class='inline-error'><%= f.object.errors[:email].join(' and ') %></p>
											    <% end %>
												</div></div>

											  <% if ContactUs.require_subject %>
												<div class="control-group">
											      <%= f.label :subject, (t('.subject') + content_tag(:abbr, '*', :class => 'required')).html_safe %>
														<div class="controls">
											      <%= f.text_field :subject %>
											      <% if f.object.errors[:subject].present? %>
											        <p class='inline-error'><%= f.object.errors[:subject].join(' and ') %></p>
														<% end %>
											  <% end %>
											</div></div>

												<div class="control-group">
											    <%= f.label :message, (t('.message') + content_tag(:abbr, '*', :class => 'required')).html_safe %>
													<div class="controls">
											    <%= f.text_area :message, :rows => 15, :cols => 80 %>
											    <% if f.object.errors[:message].present? %>
											      <p class='inline-error'><%= f.object.errors[:message].join(' and ') %></p>
											    <% end %>
											</div></div>
											
											<div class="control-group">
													<%= f.label :message, (t('Recaptcha') + content_tag(:abbr, '*', :class => 'required')).html_safe %>
										      <div class="controls">
														<%= recaptcha_tags :ajax => true %>
													</div>
											</div>
											  <div class="control-group">
											      <div class="controls">
											    <%= f.submit :submit, :alt => t('.submit'), :class => 'btn-custom load_more btn-red red_submit', :label => t('.submit'), :title => t('.submit'), :value => "Send Message", data: { disable_with: 'Sending...' } %>
											  </div></div>
											<% end %>
											   </div>
											</fieldset>
											</div>
											<div class="span1">
											</div>
											<div class="span5">
											<form class="form-horizontal">

											<div class="info verylight"> Physical Address </div><br>
											<ul class="icons">
											    <li>
											        <p>
											            <i class="icon-home"></i> 820 Broadway, Santa Monica, CA 90401
											        </p>

											    </li>
											    <!-- <li>
											    															<p>
											    											            <i class = "icon-phone"></i> 1-800-TheFilms    
											    											        </p> 
											    											    </li>
											    												    <li>
											    											        <p>
											    											            <i class = "icon-envelope"></i> info@filmmo.com    
											    											        </p>
											    											    </li>
											    											    <li>
