<div id="content">
			<div id="content-header">
				<h1>Messages</h1>
				<div class="btn-group">
					<a class="btn btn-large tip-bottom" title="Manage Files"><i class="icon-file"></i></a>
					<a class="btn btn-large tip-bottom" title="Manage Users"><i class="icon-user"></i></a>
					<a class="btn btn-large tip-bottom" title="Manage Comments"><i class="icon-comment"></i><span class="label label-important">5</span></a>
					<a class="btn btn-large tip-bottom" title="Manage Orders"><i class="icon-shopping-cart"></i></a>
				</div>
			</div>
			<div id="breadcrumb">
				<%= link_to admin_admin_index_url, {:title => "Go to Home", :class => "tip-bottom"} do %>
				<i class="icon-home"></i> Home
				<% end %>
				<a href="#" class="current">Messages</a>
			</div>
			<div class="container-fluid">
				<div class="row-fluid">
					<div class="span12">
						<div class="widget-box">
							<div class="widget-title">
								<span class="icon">
									<i class="icon-th"></i>
								</span>
								<h5>Current Messages</h5>
							</div>
							<div class="widget-content nopadding">
								<table class="table table-bordered table-striped">
									<thead>
										<tr>
											<th>1</th>
											<th>2</th>
											<th>3</th>
											<th>Actions</th>
										</tr>
									</thead>
									<tbody>
										<% @notification.each do |notification| %>
										<tr>
											<td><%= notification.subject %></td>
											<td><%= notification.body %></td>
											<td><%= notification.created_at %></td>
											<td><%= link_to User.find(notification.sender_id).name, user_path(notification.sender_id) %></td>
										</tr>
										<% end %>
									</tbody>
								</table>							
							</div>
						</div>	
					</div>
				</div>
				
				<div class="widget-box">
					<div class="widget-title">
						<span class="icon">
							<i class="icon-exclamation-sign"></i>
						</span>
						<h5>Navigation</h5>
					</div>
					<div class="widget-content">
						<div class="pagination">
						<%= paginate @notification %>
						</div>
				</div>
			</div>
