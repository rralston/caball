<%= stylesheet_link_tag 'custom' %>
<% like = Like.where(loveable_id: proj.id,loveable_type: 'Project',user_id: current_user.id) %>
<% if like.count == 0 %>
	<%=form_for(Like.new, method: :post) do |f|%>
		<%= f.hidden_field :loveable_id, value: proj.id %>
		<%= f.hidden_field :loveable_type, value: 'Project' %>
		<%= f.submit 'Love', :type => :image, :src => '/images/love_off.png' %>
	<% end %>
<% else %>
	<%=form_for(like.first, method: :delete) do |f|%>
		<%= f.submit 'Love', :type => :image, :src => '/images/love_on.png' %>
	<% end %>
<% end %>