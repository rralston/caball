<%= stylesheet_link_tag "conversations/new" %>
<%= javascript_include_tag "users/users_manifest" %>

<div class='send_message_div' style="position: relative; margin-top: 150px; margin-bottom: 150px; padding-bottom:20px; padding-left: 20px; margin-left: auto; margin-right: auto; width: 500px; background-color: white; -moz-border-radius: 15px; border-radius: 15px">
<div class='row main-container leave_margin'>

  <div class='container'>
    <h1> Send Message </h1>
  	<div class='span12'>
  		<%= render :partial => "form" %>
  	</div>
  </div>

</div>
</div>
<script type="text/javascript">

$(document).ready(function(){

  var friends = <%= raw @friends.to_json() %>;

  $('#tag_users').tagit({
    sortable: true,
    allowNewTags: false,
    tagSource: friends,
    tagsChanged: function(tagValue, action, element){
      tag_value_array = _.map($('#tag_users').tagit('tags'), function(tag){
        return tag.value
      });
      // update the hidden textbox
      $("#recipients").val(tag_value_array.toString())
    }
  })


});  
  

</script>