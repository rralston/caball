<div class='container'>
  <div class='row'>
    <div class='span2'>
      <ul class='nav nav-pills nav-stacked'>
        <li>
          <a href='#home' data-toggle='tab' class='active'> Home </a>
        </li>
        <li>
          <a href='#messages' data-toggle='tab'> Messages </a>
        </li>
        <li>
          <a href='#projects' data-toggle='tab'> Projects </a>
        </li>
        <li>
          <a href='#events' data-toggle='tab'> Events </a>
        </li>
        <li>
          <a href='#settings' data-toggle='tab'> Settings </a>
        </li>
      </ul>
    </div>
    <div class='users-view span10'>
      
      <div class='row'>
        <div class='user-img span3'>
          <img src='<%= @user.profile_pic %>'>
        </div>
        <div class='span7'>
          <h4>Welcome, <%= @user.name %>!</h4>
          <i class='icon-star'></i> You have <%= pluralize(notification, 'notification') %>
          <br>
          <a href='projects/new' class='btn btn-inverse'> 
            <i class='icon-plus'></i> New Project
          </a>
          <a href='events/new' class='btn btn-inverse'> 
            <i class='icon-plus'></i> New Event
          </a>
        </div>
        
      </div>
      
      <div class='row'>
        <div class='tab-content span7'>
          <div class='tab-pane active' id='home'>
            this is home page
          </div>
          <div class='tab-pane' id='messages'>
            Your messages with appear here
          </div>
          <div class='tab-pane' id='projects'>
            All your projects here
          </div>
          <div class='tab-pane' id='events'>
            Your events
          </div>
          <div class='tab-pane' id='settings'>
            Your settings
          </div>
        </div>

        <div class='span3 widgets'>
          Her come widgets
        </div>
      </div>
    </div>
    
    
  </div>
</div>