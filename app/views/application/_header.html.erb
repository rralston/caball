<!-- Page Header -->
<header id="masthead">       
  <nav class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container-fluid">
        <div class="row-fluid">
          <div class="span10 offset1">
            <div class="row-fluid">
              <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
              </a>
              <h1 class="brand">
                <%= link_to root_url do %>
                  <!-- <i class="icon-film"></i> -->
                  <%= image_tag"filmzu1.png", :size => "150x25" %>
                <% end %>                            
              </h1>
              <div class="nav-collapse">
                <ul class="nav pull-right">
                        <li class="divider-vertical"></li>
                        <li>
                          <%= link_to "/projects", :class => 'double-lines' do %>
                            <h4>Discover</h4>
                            <h6>great projects</h6>
                          <% end %>
                        </li>
                        <li class="divider-vertical"></li>
                        <li>
                          <%= link_to "/users", :class => 'double-lines' do %>
                            <h4>Find</h4>
                            <h6>talented people</h6>
                          <% end %>
                        </li> 
                        <li class="divider-vertical"></li>
                        <li class="dropdown">
      										
      										<%= link_to "#", :class => 'dropdown-toggle', :data => {:toggle=>"dropdown"} do %>								
      										<% if current_user %>
      										<% if notification %>
      										<span class="badge badge-info"><%= notification %></span>      			
      										<% else %>
      										<i class="icon-user icon-white"></i>
      										<% end %><% end %> 
      										My Account
      										<b class="caret"></b>
      										<% end %>
      										
      										<ul class="dropdown-menu">	                  
      											<% if current_user %>
      												<li>
      													<%= link_to user_path(current_user) do %>
      														<i class="icon-user icon-white"></i> <strong><%= current_user.name %></strong>
      													<% end %>
      												</li>
      												<li><%= link_to new_project_path do %><i class="icon-film icon-white"></i> Start a Project<% end %></li>
      												<li><%= link_to edit_user_path(current_user) do %><i class="icon-wrench icon-white"></i> Edit Profile<% end %></li>
      												<li><%= link_to signout_path, id: "sign_out" do %><i class="icon-off icon-white"></i> Sign-Out<% end %></li>
      												<li class="divider"></li>
      												<li>
      													<%= link_to "../conversations#index" do %>
      														<h4><i class="icon-envelope icon-white"></i> Messages <% if notification %>(<%= notification %>)<% end %></h4>
      													<% end %>
      												</li>
      												<% else %>
      													<li><%= link_to "Sign In with Facebook", "/auth/facebook", id: "sign_in" %></li>
      											<% end %>
      										</ul>
                      		</li>
      									  <li class="divider-vertical"></li>
      	                  <li class="dropdown search">
      											<%= link_to "#", :class => 'dropdown-toggle', :data => {:toggle=>"dropdown"} do %>
      											      <i class="icon-search icon-white"></i>Search
      											<b class="caret"></b>
      											<% end %>
      											<ul class="dropdown-menu">
      	                    <!-- Search Form Begin -->
														<form class="navbar-search pull-right">
															<%= search_form_for @search do |f| %>
															  <div class="field">
															    <% if @users %>
																		<%= f.text_field :name_cont, :placeholder => 'Find Talent...' %>
																	<% else %>
																		<% if @projects %>
																			<%= f.text_field :title_cont, :placeholder => 'Find a Project...' %>
																		<% end %>
																	<% end %>
															  </div>
															<% end %>
														</form>
														<!-- Search Form End -->
      	                  	</ul>
      										</li>
                      </ul>
              </div>
            </div>		
					<% if flash[:notice] %>
						<div class="alert alert-success">
								<button type="button" class="close" data-dismiss="alert">×</button>
								<%= flash[:notice] %>
						</div>
					<% end %>
					<% if flash[:error] %>
						<div class="alert alert-error">
								<button type="button" class="close" data-dismiss="alert">×</button>
							   <%= flash[:error] %>
						</div>
					<% end %>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>