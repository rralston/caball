!!!
%html{lang: "en"}
  %head
    %link{href: "/favicon.ico", rel: "shortcut icon"}/
    / <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    %title= @page_title? @page_title: "Filmzu"
    %meta{content: "Filmzu gives you access to the best filmmakers,\r\n\tcast, crew, agents, and fans in an incredibly simple and stunning experience.", name: "description"}/
    %meta{content: "Film, Filmmaker, Filmmaking, Cast, Crew, Agents, Fans, Director, Producer, Auditions, Casting calls, Connect, Audience, Build, Production, Distribution, Funding", name: "keywords"}/
    %meta{content: "width=1280", "maximum-scale" => "2.6", "minimum-scale" => "1.0", name: "viewport", "user-scalable" => "yes"}/
    %meta{content: "YES", name: "apple-mobile-web-app-capable"}/
    %meta{content: "8Oo6PiFuVu8IWGWQYQkZs0CmKL1bYtPvdUQj2U5UdMI", name: "google-site-verification"}/
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    = stylesheet_link_tag "application", :media => "all"
    %script{src: "https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"}
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body{"data-action" => action_name, "data-controller" => controller_name}
    -##wrap{:class => [('single-wrapper' if params[:controller] == 'pages' && params[:action] == 'index'), ('two-color-wrapper' if params[:controller] == 'pages' && (params[:action] == 'register_basics' || params[:action] == 'register_account'))]}
    = render "shared/navigation"
    -#.contentwrap{id: "#{controller_name}-#{action_name}", role: "main"}
    = yield
    -##footer
    -#  = render "shared/footer"
    = render "shared/signup_client_modal"
    = render "shared/signup_filmaker_modal"
    = render "shared/login_modal"
    = render "shared/project_new_modal"
  = google_analytics_js 'UA-38653918-1'